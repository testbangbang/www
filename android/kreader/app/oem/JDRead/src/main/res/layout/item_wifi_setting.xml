<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="ItemWifiBinding">

        <import type="android.view.View" />

        <variable
            name="accessPoint"
            type="com.onyx.android.sdk.wifi.AccessPoint" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/wifi_view_item_padding_top"
        android:paddingTop="@dimen/wifi_view_item_padding_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/wifi_view_item_margin_right"
            android:layout_toLeftOf="@+id/wifi_setting_details"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wifi_setting_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@{accessPoint.getScanResult().SSID}"
                android:textSize="@dimen/level_three_heading_font"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/wifi_setting_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/wifi_view_item_margin_top"
                android:maxLines="1"
                android:text="@{accessPoint.getSecurityString()}"
                android:textSize="@dimen/level_three_heading_font" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wifi_setting_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/wifi_setting_wifi_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/wifi"
                android:visibility="@{accessPoint.getSecurity() == 2 ? View.VISIBLE : View.GONE}" />

            <ImageView
                android:id="@+id/wifi_setting_wifi_signal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/wifi_view_item_margin_left"
                android:src="@mipmap/ic_setting_wifi" />
        </LinearLayout>
    </RelativeLayout>
</layout>
