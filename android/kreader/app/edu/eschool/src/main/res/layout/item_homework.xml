<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.onyx.android.sdk.data.model.v2.Homework" />
    </data>

    <com.onyx.android.sdk.ui.compat.AppCompatRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="2dp"
        app:alwaysLayoutImageView="true">

        <RelativeLayout
            android:id="@+id/cover_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/image_selector_bg">

            <ImageView
                android:id="@+id/image_cover"
                android:layout_width="@dimen/book_item_cover_image_width"
                android:layout_height="@dimen/book_item_cover_image_height"
                android:scaleType="fitXY"
                android:src="@drawable/cloud_default_cover" />

            <ImageView
                android:id="@+id/image_get_widget"
                android:layout_width="@dimen/book_item_get_image_width"
                android:layout_height="@dimen/book_item_get_image_height"
                android:layout_marginTop="0dp"
                android:src="@drawable/book_item_get_widget"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/image_cover"
                android:layout_alignRight="@+id/image_cover"
                android:layout_alignBottom="@+id/image_cover"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:background="#A0000000"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/book_item_date_text_size" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cover_panel"
            android:layout_alignRight="@+id/cover_panel"
            android:layout_below="@+id/cover_panel"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/book_item_text_margin_right"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:lines="2"
            android:maxLines="2"
            android:text="@{viewModel.title??(viewModel.child.title??@string/blank)}"
            android:textSize="@dimen/book_item_text_size" />

    </com.onyx.android.sdk.ui.compat.AppCompatRelativeLayout>

</layout>