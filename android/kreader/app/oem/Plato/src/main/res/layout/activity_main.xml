<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.onyx.android.plato.presenter.MainPresenter" />

        <import type="com.onyx.android.plato.bean.User" />

        <import type="android.view.View" />

        <variable
            name="haveNew"
            type="boolean" />

        <variable
            name="isShowTabLayoutAndNewMessageView"
            type="boolean" />

        <variable
            name="title"
            type="String" />

        <variable
            name="presenter"
            type="MainPresenter" />

        <variable
            name="user"
            type="User" />

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:orientation="horizontal"
            android:padding="@dimen/main_activity_title_padding">

            <LinearLayout
                android:id="@+id/ll_main_activity_title_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:onClick="@{listener::onClick}"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_main_activity_title_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_user_center" />

                <TextView
                    android:id="@+id/tv_main_activity_title_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/main_activity_title_name_padding"
                    android:paddingTop="@dimen/main_activity_title_name_padding"
                    android:text="@{title}"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/level_three_heading_font" />

            </LinearLayout>

            <ImageView
                android:id="@+id/news_image"
                android:layout_width="@dimen/message_image_width"
                android:layout_height="@dimen/message_image_width"
                android:layout_alignParentRight="true"
                android:onClick="@{listener::onClick}"
                android:src="@{haveNew?@drawable/ic_prompt_dot:@drawable/ic_prompt}"
                android:visibility="@{isShowTabLayoutAndNewMessageView ? View.VISIBLE : View.GONE}" />

            <android.support.design.widget.TabLayout
                android:id="@+id/main_activity_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/main_activity_tab_margin_right"
                android:layout_toLeftOf="@id/news_image"
                android:visibility="@{isShowTabLayoutAndNewMessageView ? View.VISIBLE : View.GONE}"
                app:tabIndicatorColor="@android:color/holo_orange_light"
                app:tabIndicatorHeight="@dimen/main_activity_tab_indicator_height"
                app:tabSelectedTextColor="@android:color/white"
                app:tabTextAppearance="@android:style/TextAppearance.Holo.Large"
                app:tabTextColor="@android:color/white" />

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/main_frame_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
</layout>
