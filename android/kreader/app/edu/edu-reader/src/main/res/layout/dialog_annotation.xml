<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/common_dialog_width"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/Annotation"
        android:textSize="@dimen/dialog_annotation_title_size" />

    <View
        android:id="@+id/textview_separate"
        style="@style/single_line_X_axis_View"
        android:layout_height="2dp"
        android:layout_below="@id/textview_title"
        android:layout_marginBottom="20dp" />

    <EditText
        android:id="@+id/edittext_annotation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_separate"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="top"
        android:hint="@string/Annotation"
        android:lines="5"
        android:textColor="@android:color/black"
        android:textSize="@dimen/dialog_annotation_title_size" />

    <Button
        android:textSize="20sp"
        android:id="@+id/button_cancel"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_alignRight="@id/edittext_annotation"
        android:layout_below="@id/edittext_annotation"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/dialog_annotation_corners_border"
        android:text="@string/Cancel"
        android:textColor="@android:color/black" />

    <Button
        android:textSize="20sp"
        android:id="@+id/button_add"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_below="@id/edittext_annotation"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/button_cancel"
        android:background="@drawable/dialog_annotation_corners_border"
        android:text="@string/add_annotation"
        android:textColor="@android:color/black" />

    <Button
        android:textSize="20sp"
        android:id="@+id/button_update"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:background="@drawable/dialog_annotation_corners_border"
        android:text="@string/update"
        android:textColor="@android:color/black"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_alignRight="@id/edittext_annotation"
        android:layout_below="@id/edittext_annotation" />

    <Button
        android:textSize="20sp"
        android:id="@+id/button_remove"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:background="@drawable/dialog_annotation_corners_border"
        android:text="@string/delete"
        android:textColor="@android:color/black"
        android:visibility="gone"
        android:layout_below="@id/edittext_annotation"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/button_update" />

</RelativeLayout>