<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="bookDetailViewModel"
            type="com.onyx.jdread.shop.model.BookDetailViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/title_bar_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/normal_selected_background"
            android:gravity="center_vertical"
            android:onClick="@{()->bookDetailViewModel.onTopBackClick()}"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/book_detail_margin"
            android:paddingRight="@dimen/book_detail_margin"
            android:paddingTop="@dimen/book_detail_margin">

            <ImageView
                android:id="@+id/title_bar_image_view_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_title_back" />

            <TextView
                android:id="@+id/title_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/book_detail_margin"
                android:text="@{bookDetailViewModel.title}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_three_heading_font" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/normal_selected_background"
            android:gravity="center_vertical"
            android:onClick="@{()->bookDetailViewModel.onTopRightClick()}"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/book_detail_margin"
            android:paddingTop="@dimen/book_detail_margin"
            android:visibility="@{bookDetailViewModel.showRightText ? View.VISIBLE : View.GONE}">

            <TextView
                android:id="@+id/title_bar_right_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/book_detail_margin"
                android:text="@{bookDetailViewModel.rightText}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_three_heading_font" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_title_right" />

        </LinearLayout>

    </RelativeLayout>

</layout>
