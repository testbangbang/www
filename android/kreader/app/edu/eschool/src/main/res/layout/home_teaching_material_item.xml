<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_item_background">

    <RelativeLayout
        android:id="@+id/home_teaching_material_category_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/home_teaching_material_layout_margin_bottom"
        android:layout_marginLeft="@dimen/home_teaching_material_layout_margin"
        android:layout_marginRight="@dimen/home_teaching_material_layout_margin"
        android:layout_marginTop="@dimen/home_teaching_material_layout_margin"
        android:background="@color/home_item_view_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/home_teaching_material_layout_margin"
        android:layout_marginEnd="@dimen/home_teaching_material_layout_margin">

        <ImageView
            android:id="@+id/imageView_category_image"
            android:layout_width="@dimen/home_teaching_category_image_size"
            android:layout_height="@dimen/home_teaching_category_image_size"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/home_teaching_category_image_margin_top"
            app:srcCompat="@drawable/home_teaching_material" />

        <TextView
            android:id="@+id/textView_category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_alignLeft="@+id/imageView_category_image"
            android:layout_alignRight="@+id/imageView_category_image"
            android:layout_alignBottom="@+id/imageView_category_image"
            android:layout_marginBottom="@dimen/home_teaching_material_category_text_margin_bottom"
            android:gravity="center"
            android:text="@string/home_item_teaching_materials_text"
            android:textSize="@dimen/home_teaching_category_text_size"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textAppearance="@style/OnyxAppCompat.TextAppearance.Light.Medium" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/home_teaching_record_image_margin_bottom"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView_record"
                android:layout_width="@dimen/home_teaching_record_image_size"
                android:layout_height="@dimen/home_teaching_record_image_size"
                app:srcCompat="@drawable/location_decoration" />

            <TextView
                android:id="@+id/textView_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/current_reading_location"
                android:textSize="@dimen/home_teaching_record_text_size" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginLeft="@dimen/home_item_background_normal_stroke_width"
        android:layout_marginRight="@dimen/home_item_background_normal_stroke_width"
        android:background="@color/home_item_inner_divider_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_teaching_material_category_layout"
        android:layout_marginStart="@dimen/home_item_background_normal_stroke_width"
        android:layout_marginEnd="@dimen/home_item_background_normal_stroke_width" />

    <TextView
        android:id="@+id/textView_material_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/home_teaching_material_title_margin_top"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="三年级语文第一册"
        android:textAppearance="@style/OnyxAppCompat.TextAppearance.Light.Large"
        android:textSize="@dimen/home_teaching_title_text_size"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_divider" />

</android.support.constraint.ConstraintLayout>