<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="#14000000">

    <TextView
        android:textColor="@android:color/black"
        android:layout_marginLeft="@dimen/activity_statistics_item_margin"
        android:layout_marginRight="@dimen/activity_statistics_item_margin"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/view_common_statistics_item_text_size"
        android:id="@+id/content"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.onyx.android.sdk.ui.view.DashedLine
        android:id="@+id/bottom_dash_line"
        app:dashLine_orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <com.onyx.android.sdk.ui.view.DashedLine
        app:dashLine_orientation="vertical"
        android:id="@+id/right_dash_line"
        android:layout_alignParentRight="true"
        android:layout_width="2dp"
        android:layout_height="match_parent"/>
</RelativeLayout>
