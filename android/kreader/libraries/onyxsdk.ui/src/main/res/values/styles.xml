<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="background">
        <item name="android:background">@android:color/background_light</item>
    </style>

    <style name="dialog_no_title" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="dialog_with_title" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="checkbox_multiple_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_multiple_button</item>
    </style>

    <style name="DialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_animation</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_animation</item>
    </style>

    <style name="dialog_seekbar" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="dialog_menu" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/reader_menu_dialog_window_background</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="full_screen_dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowFullscreen">?android:windowNoTitle</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="tts_seekbar" parent="@android:style/Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/tts_progress_bar</item>
        <item name="android:indeterminateDrawable">@drawable/tts_progress_bar</item>
        <item name="android:minHeight">2dip</item>
        <item name="android:maxHeight">2dip</item>
        <item name="android:thumb">@drawable/tts_thumb</item>
        <item name="android:thumbOffset">8dip</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="progressbar_rotundity_style" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progressbar_rotundity_color</item>
        <item name="android:minWidth">30dip</item>
        <item name="android:maxWidth">30dip</item>
        <item name="android:minHeight">30dip</item>
        <item name="android:maxHeight">30dip</item>
    </style>

    <style name="progressbar_big_rotundity_style" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progressbar_rotundity_color</item>
        <item name="android:minWidth">60dip</item>
        <item name="android:maxWidth">60dip</item>
        <item name="android:minHeight">60dip</item>
        <item name="android:maxHeight">60dip</item>
    </style>

    <style name="dialog_search_view" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/search_view_background</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="dialog_progress_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/transparent</item>
    </style>

    <style name="radiobutton_style" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radiobutton_style</item>
    </style>

    <style name="dialog_progress" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    
    <style name="dialog_tag_category" parent="@android:style/Theme.Dialog">  
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="dialog_no_board" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    
    <style name="single_line_X_axis_View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="single_line_X_axis_View_ex">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dialog_reader_menu_divider_height</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="single_line_Y_axis_View">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="LightSettingsRatingBarStyle">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:thumb">@null</item>
        <item name="android:minHeight">64px</item>
        <item name="android:maxHeight">64px</item>
    </style>
    
    <style name="holo_seekBar_style">
        <item name="android:minHeight">3dp</item>
        <item name="android:maxHeight">3dp</item>
        <item name="android:thumbOffset">0dp</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
    </style>

    <style name="global_activities_tittleBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/tittle_bar_height</item>
        <item name="android:background">@color/title_background</item>
    </style>

    <style name="global_activities_back_function_layout">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">@dimen/global_activities_back_function_layout_padding</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/imagebtn_bg</item>
    </style>

    <style name="global_activities_right_function_layout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/global_activities_tittleBar_function_layout_margin</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="global_activities_back_btn_image">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/title_back</item>
    </style>

    <style name="global_activities_back_btn_category_image">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:contentDescription">@string/title</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="global_activities_right_function_icon">
        <item name="android:layout_height">41dp</item>
        <item name="android:layout_width">41dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:contentDescription">@string/hint</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/imagebtn_bg</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="global_activities_back_btn_category_tittle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/settings_title_text_size</item>
    </style>

    <style name="global_dialog_tittle_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="global_dialog_tittle_bar_imageView">
        <item name="android:layout_height">@dimen/global_dialog_imageView_tittle_size</item>
        <item name="android:layout_width">@dimen/global_dialog_imageView_tittle_size</item>
        <item name="android:contentDescription">@string/title</item>
        <item name="android:src">@drawable/ic_menu_more</item>
    </style>

    <style name="global_dialog_tittle_bar_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/dialog_title_text_size</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="fontSize_textView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minWidth">@dimen/button_minHeight</item>
        <item name="android:background">@drawable/imagebtn_bg</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginLeft">@dimen/font_size_item_margin</item>
        <item name="android:layout_marginRight">@dimen/font_size_button_margin</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:focusable">true</item>
        <item name="android:text">@string/font_size_example_text</item>
    </style>

    <style name="font_style_reader_menu_btn_text">
        <item name="android:textStyle">normal</item>
    </style>
</resources>