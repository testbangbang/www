    <style name="fontStyle_imageView_style">
        <item name="android:focusable">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/font_item_bg</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowBackground">@drawable/alert_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="LightSettingsRatingBarStyle">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:thumb">@null</item>
        <item name="android:minHeight">@dimen/light_settings_rating_bar_minHeight</item>
        <item name="android:maxHeight">@dimen/light_settings_rating_bar_maxHeight</item>
    </style>

    <style name="seek_bar_tts" parent="@android:style/Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/ic_tts_progress_bar</item>
        <item name="android:indeterminateDrawable">@drawable/ic_tts_progress_bar</item>
        <item name="android:minHeight">2dip</item>
        <item name="android:maxHeight">2dip</item>
        <item name="android:thumb">@drawable/ic_tts_thumb</item>
        <item name="android:thumbOffset">8dip</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SpaceViewStyle">
        <item name="weight">1</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="dialog_progress" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="base_dialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
    </style>

    <style name="Preference_TextAppearanceMaterialSubhead" tools:override="true">
        <item name="android:textSize">@dimen/preference_title_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Preference_TextAppearanceMaterialBody2" tools:override="true">
        <item name="android:textSize">@dimen/preference_category_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="radio_button_style">
        <item name="android:background">@drawable/radio_button_background_no_stroke</item>
        <item name="android:button">@null</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/dialog_sort_by_order_radio_button_text_size</item>
        <item name="android:textColor">@drawable/radio_button_text_color</item>
    </style>

</resources>